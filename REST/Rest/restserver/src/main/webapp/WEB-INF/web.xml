<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Simple REST Server</display-name>
	<servlet>
		<servlet-name>Todo</servlet-name>
		<servlet-class>com.javadude.rest.server.TodoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Todo</servlet-name>
		<url-pattern>/todo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Todo</servlet-name>
		<url-pattern>/todo/*</url-pattern>
	</servlet-mapping>
</web-app>