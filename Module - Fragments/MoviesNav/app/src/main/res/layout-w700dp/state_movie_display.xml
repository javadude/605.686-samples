<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/ui_movie_list_fragment"
        android:name="com.javadude.moviesnav.UIMovieList"
        tools:layout="@layout/tools_movie_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
    <fragment
        android:id="@+id/ui_movie_display_fragment"
        android:name="com.javadude.moviesnav.UIMovieDisplay"
        tools:layout="@layout/ui_movie_display"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"/>
</LinearLayout>